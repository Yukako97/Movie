<h1 class="text-center text-white">Movie List</h1>
<div class="movie-index-wrapper">
  <div class="container">
    <% @movie.each do |movie| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="movie-index-single">
            <h2 class="movie-author">
              <%= link_to movie.title, movie_path(movie.id) %>
            </h2>
            <% if movie.image? %>
            <%= image_tag movie.image.url %>
            <% end %>
            <% if (movie.favorites.select { current_user.id }).count > 0 %>
              <%= link_to favorites_path(movie_id: movie.id), method: :delete do %>
                <%= image_tag 'icon/Movie_heart_p.png', class: 'movie-index-icon' %>
              <% end %>  
            <% else %>
              <%= link_to favorites_path(movie_id: movie.id), method: :post do %>
                <%= image_tag 'icon/Movie_heart_w.png', class: 'movie-index-icon' %>
              <% end %>  
            <% end %>
  <!-- いいね数を表示 -->
            <%= movie.favorites.count %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>