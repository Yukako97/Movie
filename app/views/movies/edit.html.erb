<div class="movies-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 movies-new-container">
        <h1 class="text-center text-white">Movie Edit</h1>
        <%= form_for @movie do |f| %>
          <div class="form-group">
            <%= f.label :title, class: 'text-white' %>
            <%= f.text_field :title, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>
          
          <div class="form-group">
            <%= f.label :synopsis, class: 'text-white' %>
            <%= f.text_field :synopsis, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :year, class: 'text-white' %>
            <%= f.text_field :year, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :director, class: 'text-white' %>
            <%= f.text_field :director, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :cast, class: 'text-white' %>
            <%= f.text_field :cast, class: 'form-control' %>
          </div>
          
          <%= f.submit '変更', class: 'btn-block btn-white' %>
          <%= link_to "削除する", movie_path(@movie.id), method: :delete %>
          
         <% end %>
      </div>
    </div>
  </div>
</div>